<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ptit.ngocthien.bookstore.activity.ViewProductActivity">

    <include
        android:id="@+id/tb_view_product"
        layout="@layout/tool_bar" />

    <FrameLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">
            
            <ImageView
                android:id="@+id/iv_item_book"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/sach"
                android:scaleType="fitXY"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên Sản Phẩm :"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tv_product_name"
                    android:layout_marginLeft="@dimen/marin_text_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gía Sản Phẩm :"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tv_cost"
                    android:layout_marginLeft="@dimen/marin_text_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loại Sản Phẩm :"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_marginLeft="@dimen/marin_text_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nhà sản xuất:"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tv_nsx"
                    android:layout_marginLeft="@dimen/marin_text_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_cart_add"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_cart_add"
                android:layout_gravity="right"/>

        </LinearLayout>
    </FrameLayout>
</LinearLayout>
